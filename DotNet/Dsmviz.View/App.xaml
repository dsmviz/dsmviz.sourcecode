<Application x:Class="Dsmviz.View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:settings="clr-namespace:Dsmviz.View.Settings"
             xmlns:themes="clr-namespace:Dsmviz.View.Resources.Themes"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="LightThemeDictionary" Source="Resources/Themes/LightTheme.xaml" />
                <ResourceDictionary x:Name="ConvertersDictionary" Source="Resources/Converters.xaml" />
                <ResourceDictionary x:Name="IconsDictionary" Source="Resources/Icons.xaml" />
                <ResourceDictionary x:Name="ControlTemplates" Source="Resources/ControlTemplates.xaml" />
                <ResourceDictionary x:Name="StyleDictionary" Source="Resources/Style.xaml" />
                <themes:ThemeResourceDictionary DarkThemeSource="Resources/Themes/DarkTheme.xaml" 
                                                  PastelThemeSource="Resources/Themes/PastelTheme.xaml" 
                                                  LightThemeSource="Resources/Themes/LightTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
